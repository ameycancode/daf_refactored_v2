{
  "mlops_pipeline": {
    "name": "energy-forecasting-mlops",
    "version": "1.0.0",
    "description": "Complete MLOps pipeline for energy forecasting with model registry and endpoint management"
  },
  "model_registry": {
    "model_package_group_name": "energy-forecasting-models",
    "approval_status": "Approved",
    "performance_thresholds": {
      "RNN": {
        "min_r2": 0.85,
        "max_mape": 5.0,
        "max_rmse": 0.1
      },
      "RN": {
        "min_r2": 0.80,
        "max_mape": 6.0,
        "max_rmse": 0.12
      },
      "M": {
        "min_r2": 0.85,
        "max_mape": 4.0,
        "max_rmse": 0.08
      },
      "S": {
        "min_r2": 0.82,
        "max_mape": 5.5,
        "max_rmse": 0.10
      },
      "AGR": {
        "min_r2": 0.80,
        "max_mape": 7.0,
        "max_rmse": 0.15
      },
      "L": {
        "min_r2": 0.75,
        "max_mape": 8.0,
        "max_rmse": 0.20
      },
      "A6": {
        "min_r2": 0.80,
        "max_mape": 6.0,
        "max_rmse": 0.12
      }
    }
  },
  "endpoint_management": {
    "instance_types": {
      "RNN": "ml.t2.medium",
      "RN": "ml.t2.medium",
      "M": "ml.t2.medium",
      "S": "ml.t2.medium",
      "AGR": "ml.t2.medium",
      "L": "ml.t2.medium",
      "A6": "ml.t2.medium"
    },
    "cost_optimization": {
      "delete_endpoints_after_testing": true,
      "save_configurations_to_s3": true,
      "endpoint_timeout_minutes": 15
    },
    "estimated_monthly_costs": {
      "ml.t2.micro": 18.72,
      "ml.t2.small": 37.44,
      "ml.t2.medium": 74.88,
      "ml.t2.large": 149.76,
      "ml.m5.large": 165.60,
      "ml.m5.xlarge": 331.20
    }
  },
  "lambda_functions": {
    "model_registry": {
      "function_name": "energy-forecasting-model-registry",
      "timeout": 900,
      "memory": 1024,
      "runtime": "python3.9"
    },
    "endpoint_management": {
      "function_name": "energy-forecasting-endpoint-management",
      "timeout": 900,
      "memory": 512,
      "runtime": "python3.9"
    }
  },
  "step_functions": {
    "training_pipeline": "energy-forecasting-training-pipeline",
    "prediction_pipeline": "energy-forecasting-daily-predictions"
  },
  "schedules": {
    "training": {
      "expression": "cron(0 2 ? * SUN *)",
      "description": "Weekly training every Sunday at 2 AM UTC"
    },
    "prediction": {
      "expression": "cron(0 1 * * ? *)",
      "description": "Daily predictions at 1 AM UTC"
    }
  },
  "s3_configuration": {
    "data_bucket": "sdcp-dev-sagemaker-energy-forecasting-data",
    "model_bucket": "sdcp-dev-sagemaker-energy-forecasting-models",
    "paths": {
      "raw_data": "archived_folders/forecasting/data/raw/",
      "processed_data": "archived_folders/forecasting/data/xgboost/processed/",
      "model_input": "archived_folders/forecasting/data/xgboost/input/",
      "predictions_output": "archived_folders/forecasting/data/xgboost/output/",
      "endpoint_configurations": "endpoint-configurations/",
      "model_registry_metadata": "model-registry/",
      "training_results": "training_results/"
    }
  }
}
